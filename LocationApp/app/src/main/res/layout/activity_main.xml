<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Labels"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblLatitud"
        style="@style/Labels"
        android:layout_marginStart="16dp"
        android:text="@string/latitudeLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtLatitud"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.048" />

    <TextView
        android:id="@+id/txtLatitud"
        style="@style/etiquetas"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.048" />

    <TextView
        android:id="@+id/lblLongitud"
        style="@style/Labels"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/LongitudeLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtLongitud"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblLatitud"
        app:layout_constraintVertical_bias="0.016" />

    <TextView
        android:id="@+id/txtLongitud"
        style="@style/etiquetas"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLatitud" />

    <TextView
        android:id="@+id/lblProveedor"
        style="@style/Labels"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/providerLabel"
        app:layout_constraintEnd_toStartOf="@+id/txtProveedor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblLongitud" />

    <TextView
        android:id="@+id/lblAccuracy"
        style="@style/Labels"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/accuracyLabel"
        app:layout_constraintEnd_toStartOf="@+id/txtAccuracy"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblProveedor" />

    <TextView
        android:id="@+id/txtProveedor"
        style="@style/etiquetas"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLongitud" />

    <TextView
        android:id="@+id/txtAccuracy"
        style="@style/etiquetas"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="@string/metersUnit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtProveedor" />

    <TextView
        android:id="@+id/lblTTFF"
        style="@style/Labels"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/timeToFixLabel"
        app:layout_constraintEnd_toStartOf="@+id/txtTTFF"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblAccuracy" />

    <TextView
        android:id="@+id/txtTTFF"
        style="@style/etiquetas"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="@string/secondsUnit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAccuracy" />

    <TextView
        android:id="@+id/lblChProvider"
        style="@style/Labels"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/providerLabel"
        app:layout_constraintEnd_toStartOf="@+id/txtChProveedor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTTFF" />

    <TextView
        android:id="@+id/txtChProveedor"
        style="@style/etiquetas"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTTFF"
        tools:layout_editor_absoluteX="195dp" />

    <Button
        android:id="@+id/btnShow"
        style="@style/buttons"
        android:layout_marginStart="35dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="26dp"
        android:text="@string/showPosition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnProvider"
        style="@style/buttons"
        android:layout_marginEnd="26dp"
        android:text="@string/changeLocationProvidersSettingsText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnShow"
        app:layout_constraintVertical_bias="0.12" />

</androidx.constraintlayout.widget.ConstraintLayout>